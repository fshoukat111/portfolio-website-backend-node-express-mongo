{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "incremental": true ,           

    /* Type Checking */
    "strict": false,                                     
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*":[
        "./app/*",
      ],

  },
    
  },
}
