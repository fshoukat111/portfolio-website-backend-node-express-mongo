{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2018",
    "module": "es2020",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    /* Type Checking */
    "strict": false,                                     
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*":[
        "./app/*",
      ],

  },
    
  },
  "exclude": ["node_modules"],
}
