{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    /* Type Checking */
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"]
    }
  },  
  "exclude": ["node_modules"]
}
